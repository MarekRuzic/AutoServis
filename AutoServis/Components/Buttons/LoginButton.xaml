<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoServis.Components.Buttons.LoginButton">
    <VerticalStackLayout>
    <!-- Textová pole -->
        <Entry x:Name="email"  
           Placeholder="Email" 
           Margin="0,0,0,10"
           Keyboard="Email"
           HorizontalTextAlignment="Center"
           ClearButtonVisibility="WhileEditing"
           ReturnType="Next"
               Completed="OnEmailCompleted"/>
        <Entry x:Name="password"
           Placeholder="Heslo" 
           Margin="0,0,0,10"
           Keyboard="Default"
           HorizontalTextAlignment="Center"
           IsPassword="True"
           ReturnType="Done"
           ClearButtonVisibility="WhileEditing"
           Completed="OnPasswordCompleted"/>
    
    <Button Text="Přihlásit se" Clicked="ClickLogin"/>
    </VerticalStackLayout>
    
</ContentView>
