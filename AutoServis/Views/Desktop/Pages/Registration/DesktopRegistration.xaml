<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoServis.Views.Desktop.Pages.Registration.DesktopRegistration"
             xmlns:components="clr-namespace:AutoServis.Components.Buttons"
             Title="Registrace">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Column="1" Grid.Row="0" Background="{StaticResource MyLightBlue}">

        </Grid>
        <Grid Grid.Column="1" Grid.Row="1" Background="{StaticResource MyLightBlue}">
            <Image Source="registation.png" Aspect="AspectFit" Margin="50" HeightRequest="400"/>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="2" BackgroundColor="White">
            <ScrollView>
                <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                    <components:Registration Margin="20"/>
                </StackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>